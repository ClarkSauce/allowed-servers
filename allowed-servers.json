{
  "servers": [
    {
      "id": "playwright-test",
      "title": "Playwright Test (local MCP)",
      "description": "Playwright MCP server for running Playwright tests locally via stdio.",
      "version": "1.57.0",
      "websiteUrl": "https://playwright.dev",
      "repository": {
        "url": "https://github.com/microsoft/playwright",
        "source": "github"
      },
      "packages": [
        {
          "registryType": "npm",
          "identifier": "playwright",
          "runtimeHint": "npx",
          "packageArguments": [
            {
              "type": "positional",
              "value": "run-test-mcp-server"
            }
          ],
          "transport": {
            "type": "stdio"
          }
        }
      ]
    }
  ]
}
